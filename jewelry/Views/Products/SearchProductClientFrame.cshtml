@model SelectList
@{
    Layout = null;

}
<script src="~/js/searchProductClient.js"></script>

<div class="my-3 row justify-content-center">
    <div class="col-4 p-2 mx-4">
        <div class="row justify-content-center d-flex">
            <input id="inputToSearch" class="col-8 form-control" placeholder="Type here...">
            <a class="col-1 transparent-button pointer" id="searchButton">
                <img src="/lib/icons/loupe.png" width="25">
            </a>
        </div>
        <div class="row justify-content-center">

            <div class="col-md-5">
                <p1 class="text-secondary">Category:</p1>
                <select id="categoryInput" class="form-control" asp-items="@Model">
                </select>
            </div>

            <div class="col-md-4">
                <p1 class="text-secondary">Max price:</p1>
                <select id="maxprice" class="form-control">
                    <option value=0>no limit</option>
                    <option value=50>50$</option>
                    <option value=100>100$</option>
                    <option value=150>150$</option>
                    <option value=200>200$</option>
                    <option value=250>250$</option>
                    <option value=300>300$</option>
                </select>
            </div>
        </div>

    </div>

</div>
<div class="text-center">
    <div id="searchLoader" class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<div id="displaySearchDiv">

</div>
