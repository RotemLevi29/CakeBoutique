<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - jewelry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" type="text/css" />
    <link href="/css/MainDesign.css" rel="stylesheet" type="text/css" />
    <link href="/css/AdminLayout.css" rel="stylesheet" type="text/css" />
    
</head>
<body>
    <header>
        <div class="sidenav">
            <div id="mySidebar" class="sidebar">
                <a class="opt" href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a class="opt" href="#">About</a>
                <a class="opt" href="#">Services</a>
                <a class="opt" href="#">Clients</a>
                <a class="opt" href="#">Contact</a>
            </div>


            @*<button class="navbar-toggler transparent-button" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a href="#about">About</a>
            <a href="#services">Services</a>
            <a href="#clients">Clients</a>
            <a href="#contact">Contact</a>
            <button class="dropdown-btn">
                Dropdown
                <i class="fa fa-caret-down"></i>
            </button>
            <div class="dropdown-container">
                <a href="#">Link 1</a>
                <a href="#">Link 2</a>
                <a href="#">Link 3</a>
            </div>
            <a href="#contact">Search</a>*@
        </div>
        <div id="main">
            <section class="">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4 col-sm-1">
                            <button id="opennavbar" class="openbtn" onclick="openNav()">&#9776 Menu</button>

                            @if (Context.User != null && Context.User.Claims != null &&
                                    Context.User.Claims.Count() > 0)
                            {
                                <div class="m-3 textDesign">
                                    Hello @Context.User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                                </div>
                            }
                        </div>
                        <div class="col-md-4 text-center">
                            <div>
                                <a asp-area="" asp-controller="Home" asp-action="Index">
                                    <img class="logo-image pos-center" src="~/lib/icons/logo.svg" />
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4 rtl mt-4 d-sm-flex ">
                            <div class="flex-grow-1 row text-center justify-content-center">

                                <div class="col-md-2 col-sm">
                                    <button data-toggle="dropdown" class="transparent-button">
                                        <img src="~/lib/icons/heart.svg" width="30" />
                                    </button>
                                </div>
                                <div class="col-md-2 col-sm">
                                    <button data-toggle="dropdown" class="transparent-button">
                                        <img src="~/lib/icons/cart4.svg" width="30" />
                                    </button>
                                </div>
                                <div class="col-md-2 col-sm">
                                    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                        <div class="btn-group" role="group">
                                            <button data-toggle="dropdown" class="transparent-button">
                                                <img src="~/lib/icons/person.svg" width="30" />
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                                                {
                                                    <a asp-controller="Users" asp-action="Logout" class="dropdown-item">Logout</a>

                                                }
                                                else
                                                {
                                                    <a asp-controller="Users" asp-action="Login" class="dropdown-item">Login</a>
                                                    <a asp-controller="Users" asp-action="Register" class="dropdown-item">Register</a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="container-fluid">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <footer class="border-top footer text-muted">
                <div class="container">
                    &copy; 2021 - jewelry - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>

    </header>
    <script src="~/js/AdminLayout.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
