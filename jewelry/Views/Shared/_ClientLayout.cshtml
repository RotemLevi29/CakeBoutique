<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - jewelry</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" type="text/css" />
    <link href="/css/MainDesign.css" rel="stylesheet" type="text/css" />

</head>
<body>
    <header>
        <section class="section-nav">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4 col-sm-1">
                        @if (Context.User != null && Context.User.Claims != null &&
                                         Context.User.Claims.Count() > 0)
                        {
                            <div class="m-3 textDesign">
                                Hello @Context.User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value
                            </div>
                        }
                    </div>
                    <div class="col-md-4 text-center">
                        <div>
                            <a asp-area="" asp-controller="Home" asp-action="Index">
                                <img class="logo-image pos-center" src="~/lib/icons/logo.svg" />
                            </a>
                        </div>
                    </div>
                    <div class="col-md-4 rtl mt-4 d-sm-flex ">
                        <div class="flex-grow-1 row text-center justify-content-center">

                            <div class="col-md-2 col-sm">
                                <button data-toggle="dropdown" class="transparent-button">
                                    <img src="~/lib/icons/heart.svg" width="30" />
                                </button>
                            </div>
                            <div class="col-md-2 col-sm">
                                <button data-toggle="dropdown" class="transparent-button">
                                    <img src="~/lib/icons/cart4.svg" width="30" />
                                </button>
                            </div>
                            <div class="col-md-2 col-sm">
                                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                                    <div class="btn-group" role="group">
                                        <button data-toggle="dropdown" class="transparent-button">
                                            <img src="~/lib/icons/person.svg" width="30" />
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                            @if (Context.User != null && Context.User.Claims != null && Context.User.Claims.Count() > 0)
                                            {
                                                <a asp-controller="Users" asp-action="Logout" class="dropdown-item">Logout</a>

                                            }
                                            else
                                            {
                                                <a asp-controller="Users" asp-action="Login" class="dropdown-item">Login</a>
                                                <a asp-controller="Users" asp-action="Register" class="dropdown-item">Register</a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner carousel-frame">
                    <div class="carousel-item active">
                        <img class="d-block fit-image " src="~/lib/images/img1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block fit-image" src="~/lib/images/img2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block fit-image" src="~/lib/images/img3.jpg" alt="Third slide">
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </section>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - jewelry - <a asp-area="" asp-controller="Home" asp-action="Index">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
