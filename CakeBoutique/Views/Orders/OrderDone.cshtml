<div class="modal-dialog modal-lg modal-dialog-scrollable">
    <div class="modal-content">
        <div class="modal-header mainFont font-italic justify-content-center">
            <h2 class="modal-title font-italic" id="exampleModalScrollableTitle">@Context.User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value's Order</h2>
        </div>
        <div class="modal-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <h3 class="font-italic font-weight-bold">Order Number: @ViewBag.orderid</h3>
                    <p class="font-italic font-weight-bold">Status: In progress</p>
                    <p class="font-italic font-weight-bold">Estimated Arrival: @ViewBag.arrivalDate</p>
                </div>
            </div>



        </div>
        <div class="modal-footer">
        </div>
    </div>
</div>
