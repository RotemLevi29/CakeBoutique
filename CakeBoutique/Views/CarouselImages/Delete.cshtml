@model CakeBoutique.Models.CarouselImage

@{
    ViewData["Title"] = "Delete";

    if (Context.User != null && Context.User.Claims != null &&
        Context.User.Claims.Count() > 0 && (Context.User.IsInRole("Admin") || Context.User.IsInRole("Editor")))
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_ClientLayout";
    }
}
<h3 class="text-center">Are you sure you want to delete this carousel?</h3>
<div>
    <h4 class="text-center">Main Carousel Banner</h4>
    <hr />
    <div class="container justify-content-center">
    <div class="containerImg">
        @if (Model.Image != null)
        {
            string img = Convert.ToBase64String(Model.Image);
            <img src="data:image/png;base64,@img" class="d-block fit-image" alt="..." />
        }
    </div>

    </div>
    <form class="my-3 text-center" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
